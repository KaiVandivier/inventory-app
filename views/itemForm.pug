extends layout

block content
  h1= title

  form(method="POST" action="")
    .form-group
      label(for="name") Name:
      input#name.form-control(
        type="text"
        name="name"
        placeholder="Item name"
        value=(item ? item.name : "")
        required
      )

    .form-group
      label(for="description") Description:
      textarea#description.form-control(
        name="description"
        placeholder="Description"
        rows="3"
        required
      ) #{item ? item.description : ""}

    .form-group
      label(for="price") Price (in cents):
      input#price.form-control(
        type="text"
        name="price"
        placeholder="Price"
        value=(item ? item.price : "")
        required
      )

    .form-group
      label(for="stock") Number in Stock:
      input#stock.form-control(
        type="text"
        name="stock"
        placeholder="Stock"
        value=(item ? item.stock : "")
        required
      )

    .form-group
      label Category:
      each category, index in categories
        .form-check
          input.form-check-input(
            type="checkbox"
            name="category"
            id=category._id
            value=category._id
          )
          label.form-check-label(for=category._id) #{category.name}

    button.btn.btn-primary(type="submit") Submit

    if errors
      ul
        each error in errors
          li!= error.msg
